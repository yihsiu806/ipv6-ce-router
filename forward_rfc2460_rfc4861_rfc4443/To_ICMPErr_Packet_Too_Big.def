#include "icmp.def"

#define UNKNOWN_ADDR v6merge(PREFIX_FROM_PD, 64, v6("::777"))

FEM_icmp6_packet_too_big (
	pkt_too_big_link0,
	_HETHER_tn2_to_nut,
	{	_SRC(v6merge(PREFIX_FROM_PD,64,v6(TN2_LINKLOCAL)));
		_DST(UNKNOWN_ADDR);
	},
	{
		MTU = 1280;
		payload = ping_data1232;
	}
)

//----------------------------------------------------------------------
// payload  data
//----------------------------------------------------------------------
Payload ping_data1232 {
	data = repeat(0xff,1232);
}

//----------------------------------------------------------------------
// Destination Unreachable
//----------------------------------------------------------------------

// ICMP error from NUT
FEM_icmp6_destination_unreachable(
	dst_unreach_from_nut,
	_HETHER_nut_to_tn2,
	{
		_SRC(v6merge(PREFIX_FROM_PD,64,nutv6("Link1")));
		_DST(v6merge(PREFIX_FROM_PD,64,v6(TN2_LINKLOCAL)));
	},
	{
		Code = 3;
		payload = any;
	}
)

// NS  NUT -> TN2
FEM_icmp6_ns (
	ns_nut_lla_to_any_tn2_ga,
	_HETHER_any,
	{
	    _SRC(any);
	    _DST(any);
	    HopLimit = 255;
	},
	{
	    TargetAddress = v6merge(PREFIX_FROM_PD,64,v6(TN2_LINKLOCAL));
	    option = any;
	}
)

// NA  NUT <- TN2
FEM_icmp6_na (
	na_tn2_to_nut,
	_HETHER_tn2_to_nut,
	{
	    _SRC(v6(TN2_LINKLOCAL));
	    _DST(nutv6("Link1"));	    
	    HopLimit = 255;
	},
	{
	    RFlag = 1;
	    SFlag = 1;
	    OFlag = 1;
	    TargetAddress = v6merge(PREFIX_FROM_PD,64,v6(TN2_LINKLOCAL));
	    option = opt_tll_tn2;
	}
)