#define	IS_ROUTER_LINK0		1

#include "./CommonHost.def"

//
// ICMP echo request
//

FEM_icmp6_echo_request(
	echo_request64,
	_HETHER_tr1_to_nut,
	{
		_SRC(TN3_GL2_ADDR);
		_DST(NUT_ADDR);
		HopLimit = 255;
	},
	{
		Identifier = PING_ID;
		SequenceNumber = PING_SN;
		payload = echo_data_16;
	}
)


//
// ICMP echo reply
//

FEM_icmp6_echo_reply(
	echo_reply64,
	_HETHER_nut_to_tr1,
	{
		_SRC(NUT_ADDR);
		_DST(TN3_GL2_ADDR);
	},
	{
		Identifier = PING_ID;
		SequenceNumber = PING_SN;
		payload = echo_data_16;
	}
)


//
// Payload Data
//

Payload echo_data_16 {
	data = {0x01, 0x02, 0x03, 0x04, 0x05, 0x06, 0x07, 0x08,
		0x09, 0x0a, 0x0b, 0x0c, 0x0d, 0x0e, 0x0f, 0x10};
}
