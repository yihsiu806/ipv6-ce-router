#include "./CommonHost.def"

//======================================================================
//
// ICMP echo request
//

FEM_icmp6_echo_request_exth(
	echo_request_HFD_M_10,
	_HETHER_tn2_to_nut,
	{
		_SRC(v6(TN2_LINKLOCAL));
		_DST(nutv6("Link1"));
		HopLimit = 255;
	},
	{
		header = _HDR_IPV6_NAME(echo_request_HFD_M_10);
		exthdr = _hbh;
		exthdr = _frg_M;
		exthdr = _dst_10;
		upper = _ICMPV6_NAME(echo_request_HFD_M_10);
	},
	{
		payload = echo_data5;
	}
)


//======================================================================
//
// Extension Headers
//

Hdr_HopByHop _hbh {
	option = _PadN_4;
}

Hdr_Fragment _frg_M {
	NextHeader = 60;
	FragmentOffset = 0;
	MFlag = 1;
	Identification  = 103;
}

Hdr_Destination _dst_10 {
	option = _type10;
}

Opt_PadN _PadN_4 {
	pad = {0, 0, 0, 0};
}

Opt_ANY _type10 {
	OptionType = 135;
	data = {0, 0, 0, 0};
}


//
// data
//

Payload echo_data5 {
	data = {1, 2, 3, 4, 5};
}


//======================================================================
//
// ICMP Parameter Problem
//

FEM_icmp6_parameter_problem(
	icmperr,
	_HETHER_nut_to_tn2,
	{
		_SRC(nutv6("Link1"));
		_DST(v6(TN2_LINKLOCAL));
	},
	{
		Code = 0;	// erroneous header field encountered
		Pointer = 4;	// Payload Length field in IPv6 header
		payload = any;
	}
)
