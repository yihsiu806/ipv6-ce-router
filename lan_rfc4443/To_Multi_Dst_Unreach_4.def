#include "icmp.def"

//----------------------------------------------------------------------
// UDP packet
//----------------------------------------------------------------------

FEM_hdr_ipv6_exth(
	udp_pkt,
	_HETHER_tn2_to_nut,
	{
		_SRC(tnv6());
		_DST(v6(_ALLNODES_MCAST_ADDR));
	},
	{
		header = _HDR_IPV6_NAME(udp_pkt);
		upper = udp;
	}
)

//----------------------------------------------------------------------
// UDP header and data
//----------------------------------------------------------------------

Upp_UDP udp {
	header = udp_hdr;
	payload = ping_data1232;
}

Hdr_UDP udp_hdr {
	SourcePort = 9000;
	DestinationPort = 9000;
}

//----------------------------------------------------------------------
// payload  data
//----------------------------------------------------------------------

Payload ping_data1232 {
	data = repeat(0xff,1232);
}
//----------------------------------------------------------------------
// Destination Unreachable and data
//----------------------------------------------------------------------

FEM_icmp6_destination_unreachable(
	dst_unreach,
	_HETHER_nut2tn,
	{
		_SRC(oneof(NUT_GLOBAL, nutv6("Link1")));
		_DST(tnv6());
	},
	{
		Code = 4;
//		payload = err;
		payload = any;
	}
)

FEM_icmp6_destination_unreachable(
	dst_unreach_any,
	_HETHER_nut2tn,
	{
		_SRC(oneof(NUT_GLOBAL, nutv6("Link1")));
		_DST(tnv6());
	},
	{
		Code = 4;
		payload = any;
	}
)

Payload err {
	data = right(_PACKET_IPV6_NAME(udp_pkt), 0);
}
