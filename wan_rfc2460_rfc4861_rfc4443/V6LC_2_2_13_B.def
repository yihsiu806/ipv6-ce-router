#ifndef LOCAL_A_FLAG
#define LOCAL_A_FLAG		1
#endif  // LOCAL_A_FLAG

FEM_icmp6_ra(
	local_ra_tr1,
	_HETHER_tr1_to_allnodes,
	{
		HopLimit	= 255;
		_SRC(v6(TR1_LINKLOCAL));
		_DST(v6(_ALLNODES_MCAST_ADDR));
	},
	{
		CurHopLimit	= 64;
		MFlag		= LOCAL_RA_M_FLAG;
		OFlag		= 1;
		LifeTime	= 0;
		ReachableTime	= 600000;
		RetransTimer	= 1000;
		option		= local_opt_prefix_link0;
	}
)

