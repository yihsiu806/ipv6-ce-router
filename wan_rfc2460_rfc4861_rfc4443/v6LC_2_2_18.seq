BEGIN{
	$V6evalTool::TestVersion = '$Name: CE-Router_Self_Test_1_0_1 $';
}

use rdisc;

use lib '../';
use CPE6_config;
use DHCPv6_common;

vCapture($Link0);

$pktdesc{'local_ra'} =
	'    Send RA (rltime!=0) w/ SLL w/o PI: '.
	'TR1 (link-local) -&gt; all-nodes multicast address';

### Initialization
if ($STATEFUL_CLIENT) {
	my $ra = $STATEFUL_CLIENT ? 'ra_MsetOset' : 'ra_MclearOset';
	my ($ret,$tn2_prefix) = cpe_initialization_1_2($ra,$Link0,"",$STATEFUL_CLIENT,0);
	if ($ret != 0) {
	    vLogHTML('<FONT COLOR="#FF0000">CPE initialization fail!</FONT><BR>');
	    dhcpExitFail();
	}
}
### End of initialization

unless(v6LC_2_2_18($Link0)) {
	exitFail_local($Link0);
	#NOTREACHED
}

exitPass_local($Link0);
#NOTREACHED



